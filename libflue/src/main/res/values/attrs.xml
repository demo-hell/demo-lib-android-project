<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CieloTextInputView">
        <attr name="hint" format="string" />
        <attr name="android:text" />
        <attr name="android:maxLines" />
        <attr name="android:maxLength" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="disableCopyToClipboard" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CieloSmallBlueButton">
        <attr name="android:text" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="CieloRegularBlueButton">
        <attr name="android:text" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="CieloRegularSecondaryButton">
        <attr name="android:text" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="CieloLargeBlueButton">
        <attr name="android:text" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="CieloRegularTextOutlineIconButton">
        <attr name="android:text" />
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="CieloBaseRadioButton">
        <attr name="android:text" />
        <attr name="android:enabled" />
        <attr name="showLineSeparator" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CieloActionListView">
        <attr name="android:text"/>
        <attr name="android:enabled" />
        <attr name="showDivider" format="boolean"  />
    </declare-styleable>

    <declare-styleable name="CieloHorizontalRegularTextSingle">
        <attr name="android:text"/>
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="CieloHorizontalRegularTextCheckbox">
        <attr name="android:text"/>
        <attr name="android:enabled" />
        <attr name="android:checked" />
    </declare-styleable>

    <declare-styleable name="ComponentFilterSelectAndMultiselectView">
        <attr name="isMultiselect" format="boolean"/>
        <attr name="spanCount" format="integer"/>
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>

</resources>